{
  "manifest_version": 3,
  "name": "Nine1Bot Browser Control",
  "version": "0.1.0",
  "description": "Browser automation and control for Nine1Bot via MCP protocol",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "debugger",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Nine1Bot Browser Control"
  }
}
