{
  "name": "@nine1bot/browser-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for browser automation via Chrome extension relay and CDP",
  "type": "module",
  "bin": {
    "browser-mcp-server": "./bin/browser-mcp-server.ts"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./core": "./src/core/index.ts",
    "./mcp": "./src/mcp/server.ts",
    "./bridge": "./src/bridge/server.ts"
  },
  "scripts": {
    "start": "bun run bin/browser-mcp-server.ts",
    "dev": "bun run --watch bin/browser-mcp-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "hono": "^4.0.0",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.3.9",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "chrome",
    "cdp",
    "extension"
  ],
  "license": "MIT"
}
